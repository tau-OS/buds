<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="BudsWindow" parent="HeApplicationWindow">
    <property name="default-width">800</property>
    <property name="default-height">600</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <property name="spacing">0</property>
        <child>
          <object class="HeSideBar">
            <property name="title">Contacts</property>
            <property name="show-back">false</property>
            <property name="has-margins">false</property>
            <property name="show-buttons">false</property>
            <property name="width-request">300</property>
            <child type="titlebar-button">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">primary_menu</property>
              </object>
            </child>
            <child>
              <object class="GtkScrolledWindow">
                <property name="hscrollbar-policy">never</property>
                <property name="vexpand">true</property>
                <property name="margin-start">18</property>
                <property name="margin-end">18</property>
                <child>
                  <object class="GtkListBox" id="contacts_listbox">
                    <property name="selection_mode">single</property>
                    <signal name="row-activated" handler="item_activated" swapped="no"/>
                    <style>
                      <class name="content-list" />
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkSeparator">
            <property name="orientation">vertical</property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">0</property>
            <property name="hexpand">true</property>
            <child>
              <object class="HeAppBar">
                <property name="flat">true</property>
                <property name="show-buttons">true</property>
                <property name="show-back">false</property>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">40</property>
                <property name="vexpand">true</property>
                <property name="halign">center</property>
                <property name="margin-top">70</property>
                <property name="margin-bottom">18</property>
                <property name="width-request">360</property>
                <child>
                  <object class="GtkImage" id="contact_image">
                    <property name="pixel-size">128</property>
                    <property name="halign">center</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="contact_name">
                    <style>
                      <class name="display" />
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">6</property>
                    <child>
                      <object class="HeMiniContentBlock" id="phone_block">
                        <property name="visible">0</property>
                        <property name="title" translatable="true">Phone</property>
                        <property name="icon">phone-symbolic</property>
                      </object>
                    </child>
                    <child>
                      <object class="HeMiniContentBlock" id="email_block">
                        <property name="visible">0</property>
                        <property name="title" translatable="true">Email</property>
                        <property name="icon">mail-archive-symbolic</property>
                      </object>
                    </child>
                    <child>
                      <object class="HeMiniContentBlock" id="bday_block">
                        <property name="visible">0</property>
                        <property name="title" translatable="true">Birthday</property>
                        <property name="icon">x-office-calendar-symbolic</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>

  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">About Buds</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
